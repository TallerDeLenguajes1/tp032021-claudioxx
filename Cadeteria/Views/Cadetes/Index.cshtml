@model List<Cadete>

<div class="text-center">
    <h1 class="display-4">Lista de Cadetes</h1>

    <div>
        <a class="btn btn-primary" asp-action="CrearCadete"> Crear Cadete</a>
    </div>


    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Direccion</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <th scope="row"> @item.Id</th>
                    <td>@item.Nombre</td>
                    <td> @item.Direccion</td>
                </tr>
            }
        </tbody>
    </table>

</div>