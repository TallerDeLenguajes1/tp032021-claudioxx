@model List<Cadete>

<div>
    <h1 class="display-4 text-center">Lista de Cadetes</h1>

    <div>
        <a class="btn btn-primary" asp-action="CrearCadete"> Crear Cadete</a>
    </div>


    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nombre</th>
                <th scope="col">Direccion</th>
                <th scope="col">Cantidad de pedidos</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td> @item.Id</td>
                <td >@item.Nombre</td>
                <td> @item.Direccion</td>
                <td> @item.Pedidos.Count() </td>
            </tr>
            }
        </tbody>
    </table>

</div>