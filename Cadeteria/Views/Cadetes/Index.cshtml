@model List<Cadete>

<div>
    <h1 class="display-4 text-center">Lista de Cadetes</h1>

    <div>
        <a class="btn btn-primary mb-2" asp-action="CrearCadete"> Crear Cadete</a>
    </div>


    <table class="table table-hover table-sm">
        <thead class="thead-light">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nombre</th>
                <th scope="col">Direccion</th>
                <th scope="col">Telefono</th>
                <th scope="col">Cantidad de pedidos</th>
                <th scope="col">Accion</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td> @item.Id</td>
                        <td>@item.Nombre</td>
                        <td> @item.Direccion</td>
                        <td> @item.Telefono</td>
                        <td> 0 </td>
                        <td>
                            <div class="d-flex flex-row bd-highlight mb-3">
                                <form class="mx-1" asp-action="SelectCadeteAEditar">
                                    <input id="IdCadete" name="IdCadete" type="hidden" value="@item.Id">
                                    <button type="submit" class="bi bi-pencil btn btn-outline-success btn-sm"></button>
                                </form>
                                <form class="mx-1" asp-action="EliminarCadete">
                                    <input id="IdCadete" name="IdCadete" type="hidden" value="@item.Id">
                                    <button type="submit" class="bi bi-trash btn btn-outline-danger btn-sm" onclick="return confirm('¿Seguro que desea eliminar este registro?')"></button>
                                </form>
                            </div>
                        </td>
                    </tr>
            }
        </tbody>
    </table>

</div>